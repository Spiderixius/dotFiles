! xterm settings
xterm*VT100*geometry:   80x24
xterm*faceName:         xft:Terminus:size=9:medium:antialias=true:autohinting=true
xterm*faceSize:         12
xterm*utf8:             1
xterm*locale:           true
xterm*transparent:      true

! urxvt settings
urxvt*VT100*geometry:   80x24
urxvt*faceName:         xft:Terminus:size=9:medium:antialias=true:autohinting=true
urxvt*faceSize:         12
urxvt*utf8:             1
urxvt*locale:           true
urxvt*transparent:      true
urxvt*tintColor:	#5f819d


!! Appearance
urxvt.termName: rxvt-unicode
urxvt.scrollBar: false
urxvt.background: #1d1f21
urxvt.foreground: #c5c8c6
urxvt.cursorColor: #c5c8c6

! black
urxvt.color0:       #282a2e
urxvt.color8:       #373b41

! red
urxvt.color1:       #a54242
urxvt.color9:       #cc6666

! green
urxvt.color2:       #8c9440
urxvt.color10:      #b5bd68

! yellow
urxvt.color3:       #de935f
urxvt.color11:      #f0c674

! blue
urxvt.color4:       #5f819d
urxvt.color12:      #81a2be

! magenta
urxvt.color5:       #85678f
urxvt.color13:      #b294bb

! cyan
urxvt.color6:       #5e8d87
urxvt.color14:      #8abeb7

! white
urxvt.color7:       #707880
urxvt.color15:      #c5c8c6

!! Font prefferenes
!urxvt.font: 		xft:Bitstream Vera Sans Mono:size=9:medium:antialias=true:autohinting=true
urxvt.font:		xft:Bitstream Vera Sans Mono:size=9:medium:antialias=true:autohinting=true
urxvt.boldFont: 	xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true:autohinting=true
urxvt.italicFont: 	xft:Bitstream Vera Sans Mono:size=9:antialias=true:autohinting=true
urxvt.boldItalicFont:	xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true:autohinting=true
!urxvt.letterSpace: 	

!! Larger history limit
urxvt.saveLines: 1000000

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size
!! Open urls in browser with Control-Click
urxvt.urlLauncher: /usr/bin/firefox
urxvt.matcher.button: C1
!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease


! wide font configuration
*.font:                 xft:Bitstream Vera Sans Mono:size=9:medium:antialias=true:autohinting=true
*.boldFont:             xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true:autohinting=true
*.italicFont:           xft:Bitstream Vera Sans Mono:size=9:antialias=true:autohinting=true
*.boldItalicFont:       xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true:autohinting=true

